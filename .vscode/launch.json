{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "test",
            "purpose": ["debug-test"],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ],
    "testExplorer": {
        "testFramework": "pytest",
        "testDiscovery": {
            "pattern": "*_test.py"
        }
    }
}
